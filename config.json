{
  "listen": ":8000",
  "staticfiles": "./static",
  "commands": [
    {
      "title": "start-vm",
      "parameters": [
        {
          "name": "Name",
          "mandatory": true
        },
        {
          "name": "ComputerName"
        }
      ],
      "type": "ps",
      "output": "json",
      "route": "/hyper-v/start",
      "command": "Start-VM -Name {{.Name}} {{if .ComputerName}} -ComputerName {{.ComputerName}}{{end}}",
      "description": "Start a vm with this command"
    },
    {
      "title": "stop-vm",
      "parameters": [
        {
          "name": "Name",
          "mandatory": true
        },
        {
          "name": "ComputerName"
        }
      ],
      "type": "ps",
      "output": "json",
      "route": "/hyper-v/stop",
      "command": "Stop-VM -Name {{.Name}} {{if .ComputerName}} -ComputerName {{.ComputerName}}{{end}}",
      "description": "Stop a vm with this command"
    },
    {
      "title": "get-process",
      "parameters": [
        {
          "name": "ComputerName"
        }
      ],
      "type": "ps",
      "output": "json",
      "route": "/get-process",
      "command": "Get-Process {{if .ComputerName}} -ComputerName {{.ComputerName}}{{end}} | Select Name,Id",
      "description": "Get all running processes"
    },
    {
      "title": "hostname",
      "type": "cmd",
      "output": "string",
      "route": "/hostname",
      "command": "hostname",
      "description": "Get hostname of this computer"
    }
  ]
}